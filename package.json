{
  "name": "incident-reporter",
  "version": "1.0.0",
  "description": "Hyperlocal Real-Time Incident Reporting Map by Nihan Nihu (nihannihu) - A civic tech application for reporting and tracking local incidents like traffic jams, road closures, waterlogging, and power outages in real-time on an interactive map. Built with Node.js, MongoDB, and Socket.IO. Connect with Nihan Nihu on GitHub (@nihannihu), Instagram (@nihannihuu), and LinkedIn (nihan-nihu).",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup-atlas": "node update-atlas-uri.js",
    "backup": "node backup.js backup",
    "backup:atlas": "node backup.js backup-to-atlas",
    "backup:upload": "node backup.js upload",
    "restore": "node backup.js restore",
    "restore:atlas": "node backup.js restore-from-atlas",
    "restore:download": "node backup.js download",
    "backup:list": "node backup.js list",
    "backup:scheduler": "node backup-scheduler.js"
  },
